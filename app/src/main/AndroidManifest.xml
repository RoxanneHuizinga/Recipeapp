<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipeapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Let it Bee"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.recipeapp.activities.OverviewActivity" />
        <activity android:name="com.example.recipeapp.activities.InstructionsActivity" />
        <activity android:name="com.example.recipeapp.activities.IngredientsActivity" />
        <activity
            android:name="com.example.recipeapp.activities.HomeActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.recipeapp.activities.RecipeActivity" />
        <activity android:name="com.example.recipeapp.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>